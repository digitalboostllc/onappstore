{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "scripts": {
    "build": "prisma generate && prisma db push --accept-data-loss && next build"
  },
  "installCommand": "npm install",
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_VERSION": "20",
      "NEXT_TELEMETRY_DISABLED": "1",
      "DATABASE_URL": "@supabase_postgres_prisma_url",
      "DIRECT_DATABASE_URL": "@supabase_postgres_url_non_pooling"
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "regions": ["iad1"]
}