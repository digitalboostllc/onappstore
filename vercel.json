{
  "version": 2,
  "buildCommand": "prisma generate && prisma db push --accept-data-loss && next build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/api/admin/**": {
      "maxDuration": 300,
      "memory": 1024
    },
    "app/(dashboard)/dashboard/**": {
      "maxDuration": 300,
      "memory": 1024
    },
    "app/admin/**": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "20",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "regions": ["iad1"],
  "crons": {
    "cleanup": "0 */6 * * *"
  }
} 