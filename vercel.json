{
  "version": 2,
  "buildCommand": "rm -rf node_modules/.prisma && prisma generate && prisma db push --accept-data-loss && next build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_VERSION": "20",
      "NEXT_TELEMETRY_DISABLED": "1",
      "DATABASE_URL": "${SUPABASE_POSTGRES_PRISMA_URL}",
      "DIRECT_DATABASE_URL": "${SUPABASE_POSTGRES_URL_NON_POOLING}"
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "regions": ["iad1"]
} 